@if(Request.IsAuthenticated)
{
    @:Welcome <strong>@User.Identity.Name</strong>!
    @Html.ImageLink("/images/logout.png", "Log out", Url.Action("logout", "user"), new { width = 16, height = 16 }, null)
}
else
{
    @Html.ImageLink("/images/login.png", "Login to Online Balance System", Url.Action("login", "user"), new { width = 16, height = 16 }, null)
}
