@model OnBalance.Models.Product

@{
    int totalSizes = (int)ViewBag.TotalSizes;
}

    <tr data-product-id="@Model.Id">
        <td>@Html.DisplayFor(x => x.Name)</td>
        <td>@Html.DisplayFor(x => x.InternalCode)</td>
        <td>@Html.DisplayFor(x => x.QuantityCalculated)</td>
        <td>@Html.DisplayFor(x => x.Price)</td>
        <td>@Html.DisplayFor(x => x.PriceReleaseFirst)</td>
        @for (int i = 0; i < totalSizes; i++)
        {
            <td>
                @* class no-init for JS *@
                <div data-product-id="@Model.Id" data-size-index="@i" class="product-created-size no-init" style="font-size: x-small">Add</div>
            </td>
        }
    </tr>
