@model OnBalance.ViewModels.Product.ProductBalanceViewModel
@{
    ViewBag.Title = "Balance";
    Layout = null;
    
    var pendingChanges = new OnBalance.ViewModels.PendingChangesViewModel();
    var sb = new System.Text.StringBuilder();
}

