@model OnBalance.ViewModels.Products.ProductsInPosViewModel
@{
    ViewBag.Title = "Balance";
    Layout = null;
    
}

<table>
@foreach(var item in Model.Products)
{
    
        <tr>
            <td>
                @Html.Display(item.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.internal_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                <a href="@Url.Action("edit", new{ id = item.id })"><img src="@Url.Content("/images/edit.png")" alt="Edit" width="16" height="16" /></a>
                
            </td>
        </tr>
        <tr>
            <td colspan="6">
                @Html.DisplayFor(x => item.Details, "ProductDetail")
            </td>
        </tr>
}
</table>
