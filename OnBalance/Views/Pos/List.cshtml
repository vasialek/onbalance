@model IList<OnBalance.Models.Organization>

@{
    ViewBag.Title = "List of Point Of Service (POS)";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "create")
</p>
<table>
    <tr>
        <th>ID</th>
        <th>Status</th>
        <th>Name</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Id</td>
        <td>@item.StatusName</td>
        <td>@item.Name</td>
        <td>
            @Html.ImageLink("/images/edit.png", "Edit Point Of Service", Url.Action("edit", new { id = item.Id }), new { width = 16, height = 16 }, null)
        </td>
    </tr>
}

</table>
